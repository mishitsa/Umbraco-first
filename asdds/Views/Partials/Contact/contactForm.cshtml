@inherits UmbracoViewPage<ContactViewModel>

@using asdds.Models
@using asdds.Controller

<div id="form-outer">
    @using (Ajax.BeginForm("SubmitForm", "SendEmail", new AjaxOptions()
    {

        UpdateTargetId = "form-result",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "contactForm.showResult",
        OnFailure = "contactForm.showResult"
    }, new { id = "contact-form" }))
    {

        @Html.HiddenFor(m => m.ContactFormId)
    <div class="my-5">
    <div class="form-floating">
        <div class="form-group floating-label-form-group controls">
            @*<label for="name">Name</label>*@
            @Html.TextBoxFor(m => m.Name, new { @class = "form-controller", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-floating">
        <div class="form-group floating-label-form-group controls">
            @*<label for="email">Email address</label>*@

            @Html.TextBoxFor(m => m.Email, new { @class = "form-controller", placeholder = "Email" })

            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-floating">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            @*<label for="message">Message</label>*@
            @Html.TextBoxFor(m => m.Message, new { @class = "form-controller", placeholder = "Message", rows = "6" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-primary contact-submit" id="sendMessageButton">Send</button>
    </div>
        </div>

    }

